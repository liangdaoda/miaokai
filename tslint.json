{
    // typescript
    "member-access": [true , "no-public" || "check-accessor" || "check-constructor" || "check-parameter-property"  ] ,  //类成员必须声明 private public ....

    "no-var-keyword": true, // 原则上不允许使用var，如果需要使用变量提升等功能，需要在项目lint配置中注明

    "prefer-const": false, // const使用建议

    "no-eval": true, //不允许使用eval

    "curly": true, //for if do while 要有括号

    // 格式
    "no-trailing-whitespace": true, // 不允许行末空格

    "whitespace": [true,  // 空格检查
        "check-branch", // if ... else 
        "check-decl", // 标识符定义 let a, b;
        "check-operator", // 操作符 a = b + c;
        "check-module", // export & import
        "check-separator", // 分隔符： [a, b, c], {a: b, c: d}
        "check-rest-spread", // 可变参数的省略号
        "check-type", // 类型声明 let a: string;
        "check-typecast", // 类型转换 a = <string> b;
        "check-type-operator",  // 
        "check-preblock"
    ]

    // ... 待补，更新中
}
